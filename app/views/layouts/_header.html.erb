<header class="navbar navbar-default">
  <div class="container">
    <nav class='nav navbar-bg-bark navbar-left' >
      <% if customer_signed_in? %>
      <%= link_to  "ロゴ予定", root_path %>
      <% elsif admin_signed_in? %>
      <%= link_to "ロゴ予定", admin_root_path %>
      <% else %>
      <%= link_to  "ロゴ予定", root_path %>
      <% end %>
    </nav>
    <nav>
      <ul class="nav navbar-nav navbar-right ">
        <% if customer_signed_in? %>
        <li  aria-hidden="true">
          <%= link_to "マイページ", customer_customer_path(current_customer.id), class: "glyphicon glyphicon-cutlery text-warning" %>
        </li>
        <li  aria-hidden="true">
          <%= link_to " 商品一覧", customer_products_index_path, class: "glyphicon glyphicon-cutlery text-warning" %>
        </li>
        <li  aria-hidden="true">
          <%= link_to " カート", customer_cart_products_path, class: "glyphicon glyphicon-shopping-cart text-warning" %>
        </li>
        <li  aria-hidden="true">
          <%= link_to " ログアウト", destroy_customer_session_path, method: :delete, class: "glyphicon glyphicon-log-out text-warning" %>
        </li>
        <% elsif admin_signed_in? %>
        <li  aria-hidden="true">
          <%= link_to " 商品一覧", admin_products_path, class: "glyphicon glyphicon-cutlery text-warning"  %>
        </li>
        <li  aria-hidden="true">
          <%= link_to " 会員一覧",  admin_customers_path, class: "text-warning glyphicon glyphicon-user" %>
        </li>
        <li  aria-hidden="true">
          <%= link_to " 注文履歴一覧",  admin_orders_path, class: "text-warning glyphicon glyphicon-flag" %>
        </li>
        <li  aria-hidden="true">
          <%= link_to " ジャンル一覧", admin_product_categories_path, class: "text-warning glyphicon glyphicon-list-alt" %>
        </li>
        <li  aria-hidden="true">
          <%= link_to " ログアウト", destroy_admin_session_path, method: :delete, class: "glyphicon glyphicon-log-out text-warning" %>
        </li>
        
        <% else %>
        <li  aria-hidden="true">
          <%= link_to " 商品一覧", customer_products_index_path, class: "glyphicon glyphicon-cutlery text-warning" %>
        </li>
        
        <li aria-hidden="true">
          <%= link_to " sign up", new_customer_registration_path, class: "glyphicon glyphicon-edit text-warning" %>
        </li>
        <li aria-hidden="true">
          <%= link_to " login", new_customer_session_path, class: "glyphicon glyphicon-log-in text-warning" %>
        </li>
        <% end %>
      </ul>
    </nav>
    <% if admin_signed_in? %>
    <div class="search-form " style="margin-top: 70px; text-align: right;">
      <%= form_tag(admin_search_path, method: :get) do %>
      <%= text_field_tag 'search[content]' %>
      <%= select_tag 'search[model]', options_for_select({ "Customer" => "customer", "Product" => "product" }),include_blank: "選択してください" %>
      <%= select_tag 'search[method]', options_for_select({ "完全一致" => "perfect", "前方一致" => "forward", "後方一致" => "backward", "部分一致" => "partial" }),include_blank: "選択してください" %>
      <%= submit_tag '検索' %>
      <% end %>
    </div>
    <% end %>
  </div>
</header>
