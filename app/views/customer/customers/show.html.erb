<div class="cintainer">
    <div class="row">
        <div class="col-lg-8">      
            <h3>マイページ</h3>
            <p>登録情報</p>
            <%= link_to '編集する', edit_customer_customer_path, class: 'btn btn-primary' %>
            <%= link_to 'パスワードを変更する', edit_customer_customer_path, class: 'btn btn-primary' %>
            <table>
                <tr>
                    <td>氏名</td>
                    <td>
                        <%= @customer.family_name %> <%= @customer.first_name %>
                    </td>
                </tr>
                <tr>
                    <td>カナ</td>
                    <td>
                        <%= @customer.kana_family_name %> <%= @customer.kana_first_name %>
                    </td>
                </tr>
                <tr>
                    <td>郵便番号</td>
                    <td>
                        <%= @customer.postal_code %>
                    </td>
                </tr>
                <tr>
                    <td>住所</td>
                    <td>
                        <%= @customer.address %>
                    </td>
                </tr>
                <tr>
                    <td>電話番号</td>
                    <td>
                        <%= @customer.phone_number  %>
                    </td>
                </tr>
                <tr>
                    <td>メールアドレス</td>
                    <td>
                        <% @customer.email %>
                    </td>
                </tr>
            </table>
            <p>配送先</p>
            <%= link_to '一覧を見る',  customer_deliveries_path, class: 'btn btn-primary' %>
            <p>注文履歴</p>
            <%= link_to '一覧を見る', customer_orders_path, class: 'btn btn-primary' %>
        </div>
    </div>
</div>