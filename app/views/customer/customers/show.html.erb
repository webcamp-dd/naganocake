<div class="cintainer session-customer-show">
    <div class="row">
        <div class = "col-xs-2"></div>
        <div class="col-xs-5">
        <%= notice %>   
            <h3>マイページ</h3>
            <p>登録情報</p>
            <div class="customere-header">
                <%= link_to '編集する', edit_customer_customer_path, class: 'btn btn-success customer-edit' %>
                <%= link_to 'パスワードを変更する', edit_customer_password_path, class: 'btn btn-primary' %>
            </div>
            <table class="table table-striped user-show">
                    <tr>
                        <td class="user-show_td">氏名</td>
                        <td>
                            <%= @customer.family_name %> <%= @customer.first_name %>
                        </td>
                    </tr>
                    <tr>
                        <td class="user-show_td">カナ</td>
                        <td>
                            <%= @customer.kana_family_name %> <%= @customer.kana_first_name %>
                        </td>
                    </tr>
                    <tr>
                        <td class="user-show_td">郵便番号</td>
                        <td>
                            <%= @customer.postal_code %>
                        </td>
                    </tr>
                    <tr>
                        <td class="user-show_td">住所</td>
                        <td>
                            <%= @customer.address %>
                        </td>
                    </tr>
                    <tr>
                        <td class="user-show_td">電話番号</td>
                        <td>
                            <%= @customer.phone_number  %>
                        </td>
                    </tr>
                    <tr>
                        <td class="user-show_td">メールアドレス</td>
                        <td>
                            <%= @customer.email %>
                        </td>
                    </tr>
            </table>
            <div class="customere-bottom">
                <%= link_to '配送先一覧を見る',  customer_deliveries_path, class: 'btn btn-primary' %>
                <%= link_to '注文履歴一覧を見る', customer_orders_path, class: 'btn btn-primary' %>
            </div>
        </div>
    </div>
</div>