<div class="container">
    <div class="row">
        <div class="col-xs-1"></div>
        <div class="col-xs-2">
            <%= render 'customer/products/category', category: @categories %>
        </div>
        <div class="col-xs-9">
            <% @category.products.each do |category| %>
                <% if category.sales_status == true %>
                    <div class="main-contet">
                            <%= link_to customer_product_path(category.id) do %>
                                <%= attachment_image_tag category, :product_image, :fill, 300, 300, format: 'jpeg', fallback: "no-image-mini.jpg" %>
                            <% end %>
                            <%= link_to category.name, customer_product_path(category.id) %>
                            <%= category.description %>
                            <p><%= category.unit_price.to_s(:delimited) %>å††</p>
                    </div>
                <% end %>
            <% end %>
        </div>
    </div>
</div>