<div class="container">
    <div class="row section1">
        <div class="col-xs-1"></div>
        <div class="col-xs-3">
            
        </div>
        <div class="col-xs-6 message">
            <%= @products.each do |product| %>
                <%= attachment_image_tag product, :product_image, :fill, 100, 100, format: 'jpeg' %>
                <%= product.name %>
                <%= product.unit_price %>
            <% end %>
            <%= paginate @products %>
        </div>
    </div>


<%= form_for(@product, url:/customer/product ) do |f| %>

    <%= f.attachment_field :product_image %>
    <%= f.text_field :name %>
    <%= f.text_field :unit_price %>
    <%= f.submit %>

<% end %>