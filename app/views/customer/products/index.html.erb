

<div class="container">
    <div class="row section1">
        <div class="col-lg-2">
            <%= render 'customer/products/category', category: @category %>
        </div>
            <div class="col-lg-8 message">
               <% @products.each do |product| %>
                <%= link_to customer_product_path(product.id) do %>
                    <%= attachment_image_tag product, :product_image, :fill, 100, 100, format: 'jpeg', fallback: "no-image-mini.jpg" %>
                <% end %>
                    <%= link_to product.name, customer_product_path(product.id) %>
                    <%= product.description %>
                    <p><%= product.unit_price.to_s(:delimited) %>å††</p>
               <% end %>
               <%= paginate @products %>
            </div>
    </div>
</div>
