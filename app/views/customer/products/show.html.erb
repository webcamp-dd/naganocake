<h1>商品詳細</h1>
<div class="container">
    <div class="row section1">
        <div class="col-xs-1"></div>
        <div class="col-xs-2">
            <%= render 'customer/products/category', category: @category %>
        </div>
                    <div class="col-xs-8">
                           <%= attachment_image_tag @product, :product_image, :fill, 300, 300, format: 'jpeg' %>
                           <h2><%= @product.name  %></h2>
                           <%= @product.description %>
                           <p><%= @product.unit_price.to_s(:delimited) %>円</p>
                        <%= form_with model: @cart_product, url: customer_cart_products_path(product_id: @product), local:true do |f| %>

                            <%= f.select :quantity, [[1, 1],[2, 2],[3, 3]] %>
                            <%= f.submit %>
                       <% end %>
                    </div>
    </div>
</div>