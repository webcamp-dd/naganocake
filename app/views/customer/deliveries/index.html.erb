<h3>配送先登録 / 一覧</h3>

<%= notice %>

<%= form_with(model: @deliverie, url: new_customer_delivery_path, html: {method: :post} )do |f| %>
    <form class="form-horizontal">
        <div class="form-inline">
            <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
            <%= f.text_field :postal_code, class:"form-control" %>
        </div>
        <div class="form-inline">
            <%= f.label :address, "住所" %><%= f.text_field :address, class:"form-control" %>
        </div>
        <div class="form-inline">
            <%= f.label :name, "宛名" %><%= f.text_field :name, class:"form-control" %>
        </div>
        <div class="form_action">
        <%= f.submit "登録する" ,class: "btn-sm btn-success"%>
        </div>
    </form>
 <% end %>

<table class="table table-inverse">
	<thead>
		<tr>
			<th>郵便番号</th>
			<th>住所</th>
			<th>宛名</th>
			<th></th>
		</tr>
    </thead>
    <% @deliveries.each do |deliverie| %>
        <tbody>
            <tr>
                <td><%= deliverie.postal_code %></td>
                <td><%= deliverie.address %></td>
                <td><%= deliverie.name %></td>
                <td>
                    <%= link_to "編集する",edit_customer_delivery_path(deliverie), class: "btn-sm btn-primary" %>
                    <%= link_to "削除する", customer_delivery_path(deliverie), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger" %>
                </td>
            </tr>
        </tbody>
    <% end %>
</table>



