<h1>ショッピングカート</h1>

<table class="table table-hover table-inverse">
	<thead>
		<tr>
			<th>商品名</th>
			<th>単価(税込)</th>
			<th>数量</th>
			<th>小計</th>
			<th></th>
		</tr>
    </thead>
    <% @cart_products.each do |cart_product| %>
        <tbody>
            <tr>
                <td><%= cart_product.product.name %></td>
                <td><%= cart_product.product.quantity %></td>
                <td></td>
                <td></td>
                <td></td>
            </tr>
        </tbody>
    <% end %>
</table>