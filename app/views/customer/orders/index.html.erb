<h3>注文履歴一覧</h3>

<table>
　<thead>
		<tr>
			<th>注文日</th>
			<th>配送先</th>
			<th>注文商品</th>
			<th>支払い金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
		</tr>
    </thead>
    <% @orders.each do |order| %>
        <tbody>
            <tr>
                <td><%= order.created_at %>
                </td>
                <td><%= order.postal_code + order.address + order.name %>
                </td>
                <td><% order.order_products.each do |orderproduct| %>
                        <%= orderproduct.product.name %>
                    <% end %>
                </td>
                <td>
                    <%= order.total_price.to_s(:delimited) %>
                </td>
                <td><%= order.status %>
                </td>
                <td>
                    <%= link_to "表示する",customer_order_path(order), class: "btn-sm btn-primary" %>
                </td>
            </tr>
        </tbody>
        <% end %>
</table>


