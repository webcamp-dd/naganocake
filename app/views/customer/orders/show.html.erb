<div class="col-lg-1"> </div>
<div class="container">
    <div class="row">  
        <div class="col-lg-10">
<%# body %>
<div class="title mb-2"><h3>注文履歴詳細</h3></div> 
<div class="row">
    <div class="col-lg-8">
           <div class="title"><p>
           	<span class="glyphicon glyphicon-play" aria-hidden="true"></span>注文情報</p></div>
         <table class="table table-bordered">
            <tr class="active">
                <th class="warning">注文日</th>
                <td><%= @order.created_at.strftime('%Y/%m/%d')  %></td>
            </tr>
                <tr class="active">
                <th class="warning">配送先</th>
                <td>〒<%= @order.postal_code %><br>
                    <%= @order.address %><br>
                    <%= @order.name %>
                </td>
            </tr>  <tr class="active">
                <th class="warning">支払い方法</th>
                <td><%= @payment %></td>
            </tr>
            <tr class="active">
                <th class="warning">ステータス</th>
                <td><%= @status %></td>
            </tr>
            </table>
    </div>
    <div class="col-lg-4">
        <div class="title"><p>
           	<span class="glyphicon glyphicon-play" aria-hidden="true"></span>請求情報</p></div>
         <table class="table table-bordered">
        <tr class="active">
            <th class="warning">商品合計</th>
            <td><%= @order.total_price.to_s(:delimited) %></td> <%# 修正予定 %>
        </tr>
            <tr class="active">
            <th class="warning">配送料</th>
            <td><%= @order.postage.to_s(:delimited) %></td>  <%# 修正予定 %>

        </tr>  <tr class="active">
            <th class="warning">ご請求額</th>
            <td><%= (@order.total_price + @order.postage).to_s(:delimited) %></td>
        </tr>
        </table>
    </div>
</div>  

    <div class="row">
        <div class="col-lg-8">
           <div class="title"><p>
           	<span class="glyphicon glyphicon-play" aria-hidden="true"></span>注文内容</p></div>
                 <table class="table table-bordered">
                    <thead>
                    <tr class="active">
                            <th class="warning">商品</th>
                            <th class="warning">単価(税込)</th>
                            <th class="warning">個数</th>
                            <th class="warning">小計</th>
                        </tr>
                    </thead>
                    <% @order_products.each do |order_product| %>
                        <tbody>
                            <tr>
                                <td><%= order_product.product.name %></td>
                                <td><%= order_product.purchase_unit_price.to_s(:delimited) %></td>
                                <td><%= order_product.quantity %></td>
                                <td><%  unitsum = order_product.quantity * order_product.purchase_unit_price %>
                                    <%= unitsum.to_s(:delimited)%></td>
                            </tr>
                        </tbody>
                    <% end %>
                </table>
        </div>
    </div>

<%# body %>
        </div>
    <div>
</div>
<div class="col-lg-1"> 
</div>