<div class="col-lg-1"> </div>
<div class="container">
    <div class="row">  
        <div class="col-lg-10">
        <h4>注文情報入力</h4> 
            <%= form_with(model: @order, local: true, url: customer_order_confimation_path) do |f| %>
            <b>支払い方法入力</hb>
                <ul>
                    <li>
                        <%= f.radio_button :payment, :creditcard %>
                        <%= f.label :payment, "クレジットカード", {value: :creditcard, style: "display: inline-block;"} %>
                    </li>
                    <li>
                        <%= f.radio_button :payment, :bank %>
                        <%= f.label :payment, "銀行振込", {value: :bank, style: "display: inline-block;"} %>
                    </li>
                </ul>

            <b>お届け先</b>
            <ul>
                    <li>
                    
                    </li>
                    <li>
                        <%= f.radio_button :delivery_address, "a" %>
                        <%= f.label :address, "ご自身の住所" %>
                        <div class="address_text"><%= current_customer.postal_code + current_customer.address%></div>
                        <div class="address_text"><%= current_customer.family_name + current_customer.first_name%></div>
                    </li>
                    <li>
                        <%= f.radio_button :delivery_address, "b" %>
                        <%= f.label :address, "登録済住所から選択" %>
                            <%= f.collection_select :key, current_customer.deliveries, :id, :total_address %>

                    </li>
                    <li>
                        <%= f.radio_button :delivery_address, "c" %>
                        <%= f.label :address, "新しいお届け先" %>
                        <div class="address_text">郵便番号(ハイフンなし)</div><%= f.text_field :postal_code %>
                         <div class="address_text">住所</div><%= f.text_field :address %>
                         <div class="address_text">宛名</div><%= f.text_field :name %>

                    </li>
                </ul>

        <%= f.submit "確認画面へ進む", class: "confimation-btn btn-lg btn-primary" %>
        <% end %>
<%# 以降レイアウト用 %>
        </div>
    <div>
</div>
<div class="col-lg-1"> 
</div>