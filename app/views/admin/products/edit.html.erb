<div class="col-xs-1"></div>
<div class="container">
	<div class="row">
		<div class="col-xs-12">
			<div class="title"><h3>商品編集</h3></div>
		</div>
	</div>
  <br>

  <%= form_with model: @product, url:admin_product_path(@product),local: :true, class:"form-horizontal" do |f| %>
  <div class="row">
    <div class="col-xs-5">
     <%= f.attachment_field :product_image %>
   </div>

   <div class="col-xs-7">
    <div class="form-group">
      <%= f.label :商品名 ,class:"col-sm-3" %>
      <div class="col-sm-9">
        <%= f.text_field :name, class:"form-control" %>
      </div>
    </div>
    <div class="form-group">
     <%= f.label :商品説明,class:"col-sm-3" %>
     <div class="col-sm-9">
       <%= f.text_area :description, class:"form-control" %>
     </div>
   </div>
   <div class="form-group">
     <%= f.label :ジャンル,class:"col-sm-3" %>
     <div class="col-sm-9">
      <%= f.collection_select :product_category_id, ProductCategory.all, :id,:name, { include_blank: "--選択してください--"}, {class: "form-control"} %>
       </div>
     </div>
     <div class="form-group">
      <%= f.label :税抜価格,class:"col-sm-3" %>
      <div class="col-sm-9">
        <%= f.text_field :unit_price, class:"form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :販売ステータス,class:"col-sm-3" %>
      <div class="col-sm-9">
        <%= f.select :sales_status, [["販売中","false"],["売切れ","true"]],{},{class:"form-control"} %>
      </div>
    </div>
    <div class="pull-right">
      <%= f.submit "変更を保存",class: "btn btn-primary" %>
    </div>
  </div>
</div>
<% end %>
</div>
<div class="col-xs-1"></div>