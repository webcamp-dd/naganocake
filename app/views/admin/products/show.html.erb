<div class="col-xs-1"></div>

<div class="container">

	<div class="row">
		<div class="col-xs-12">
			<div class="title"><h3>商品詳細</h3></div>
		</div>
	</div>
	<br>

	<div class="row">
		<div class="col-xs-5">
			<%= attachment_image_tag @product, :product_image, size: "100x100",format:'jpeg', fallback: "no-image-mini.jpg" %>
		</div>

		<div class="col-xs-7">
			<div class="row">
				<label class="col-sm-3">商品名</label>
				<div class="col-sm-9"><%= @product.name %></div>
			</div>
			<div class="row">
				<label class="col-sm-3">商品説明</label>
				<div class="col-sm-9"><%= @product.description %></div>
			</div>
			<div class="row">
				<label class="col-sm-3">ジャンル</label>
				<div class="col-sm-9"><%= @product.product_category.name %></div>
			</div>
			<div class="row">
				<label class="col-sm-3">税込価格(税抜価格)</label>
				<div class="col-sm-9">
					<%= ((@product.unit_price * 1.1).round).to_s(:delimited) %>  (<%= @product.unit_price.to_s(:delimited) %>)  円
				</div>
			</div>
			<div class="row">
				<label class="col-sm-3">販売ステータス</label>
				<div class="col-sm-9">
					<% if @product.sales_status == true %>
					販売中
					<% else %>
					売切れ
					<% end %>
				</div>
			</div>

			<div class="row">
				<div class="col-xs-12">
					<%= link_to "編集する",edit_admin_product_path(@product),class: "btn btn-primary pull-right" %>
				</div>
			</div>

		</div>
	</div>
</div>
<div class="col-xs-1"></div>