<div>
<h1>商品一覧</h1>

<%# 新規登録ボタン %>
<%= link_to new_admin_product_path do %>
<span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
<% end %>

<table class="table table-hover">
	<thead>
		<tr>
			<th>商品ID</th>
			<th>商品名</th>
			<th>税抜価格</th>
			<th>ジャンル</th>
			<th>ステータス</th>
		</tr>
	</thead>
	<tbody>
		<% @products.each do |product| %>
		<tr>
			<td><%= product.id %></td>
			<td><%= link_to product.name, admin_product_path(product) %></td>
			<td><%= converting_to_jpy(product.unit_price) %></td>
			<td><%= product.product_category.name %></td>
			<td><% if product.sales_status == true %>販売中<% else %>売切れ<% end %></td>
		</tr>
		<% end %>
		<%= paginate @products %>
	</tbody>
</table>
</div>