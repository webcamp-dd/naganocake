<div class="container">
	<div class="row">
		<div class="col-lg-1"></div>
		<div class="col-lg-10">
			<h1>ジャンル編集</h1>
			</div>
		<div class="col-lg-1"></div>
	</div>

	<div class="row">
		<div class="col-lg-1"></div>
		<div class="col-lg-10">
			<%= form_with model: @product_category, url: admin_product_category_path do |f| %>
			<%= f.label :ジャンル %>
			<%= f.text_field :name %>

			<!-- 有効/無効の選択 -->
			<%= f.radio_button :is_active, 1 %>
			<%= f.label :is_active,"有効", {value: 1, style: "display: inline-block;"} %>
			<%= f.radio_button :is_active, 0 %>
			<%= f.label :is_active,"無効", {value: 0, style: "display: inline-block;"} %>
			<%= f.submit "変更を保存する",class: "btn btn-primary" %>
			<% end %>
		</div>
		<div class="col-lg-1"></div>
	</div>
</div>