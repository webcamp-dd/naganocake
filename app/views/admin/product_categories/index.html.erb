<h1>ジャンル一覧・追加</h1>

<div class="row">
	<div>
	<%= form_for @product_category do |f| %>
	<%= f.label :ジャンル %>
	<%= f.text_field :name %>

	<%= form_with(model: product_category, local: true) do |form| %>
		<%= from.radio_button :is_active,:有効 %>
		<%= from.radio_button :is_active,:無効 %>
	<% end %>

	<%= f.submit "追加",class: "btn btn-primary" %>
	<% end %>
</div>
</div>