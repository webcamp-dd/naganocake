<h1>ジャンル一覧・追加</h1>

<!-- ジャンル登録フォーム -->
<div>
	<div>
		<%= form_with model: @product_category, url:admin_product_categories_path do |f| %>
		<%= f.label :ジャンル %>
		<%= f.text_field :name %>

		<!-- 有効/無効の選択 -->
		<%= f.radio_button :is_active, 1 %>
		<%= f.label :is_active,"有効", {value: 1, style: "display: inline-block;"} %>
		<%= f.radio_button :is_active, 0 %>
		<%= f.label :is_active,"無効", {value: 0, style: "display: inline-block;"} %>

		<%= f.submit "追加",class: "btn btn-primary" %>
		<% end %>
	</div>

	<!-- ジャンル一覧 -->
	<div>
		<table class="table-striped">
			<thead>
				<tr>
					<th>ジャンル</th>
					<th>状態</th>
					<th colspan="4"></th>
				</tr>
			</thead>
			<tbody>
				<% @product_categories.each do |product_category| %>
				<tr>
					<td><%= product_category.name %></td>
					<td>
						<% if product_category.is_active == true %>有効
						<% else %>
						無効
						<% end %>
					</td>
					<td><%= link_to "編集する", edit_admin_product_category_path(product_category),class: "btn btn-primary" %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>