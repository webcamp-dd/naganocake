<div class="container">
	<div class="row">
		<div class="col-lg-1"></div>
		<div class="col-lg-10">
			<h1>注文履歴一覧</h1>

			<table class="table table-hover">
				<thead>
					<tr>
						<th>購入日時</th>
						<th>購入者</th>
						<th>注文個数</th>
						<th>注文ステータス</th>
					</tr>
				</thead>
				<tbody>
					<% @orders.each do |f| %>
					<tr>
						<td><%= link_to f.created_at.strftime('%Y/%m/%d %H:%M:%S') , admin_order_path(f) %></td>
						<td><%= f.customer.family_name + f.customer.first_name %></td>
						<td><%= f.order_products.sum(:quantity) %></td>
						<td><%= f.status %></td>
					</tr>
					<% end %>
					<%= paginate @orders %>
				</tbody>
			</table>
		</div>
		<div class="col-lg-1"></div>
	</div>
</div>