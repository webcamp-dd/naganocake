<div class="col-xs-1"></div>

<div class="container">
	<div class="row">
		<div class="col-xs-12">
			<div class="title"><h3>注文履歴詳細</h3></div>
		</div>
	</div>
	<br>

	<div class="row">
		<div class="col-xs-12">
			<%= notice %>
			<table>
				<thead>
					<tr></tr>
				</thead>
				<tbody>
					<tr>
						<td>購入者</td>
						<td><%=link_to @order.customer.family_name + @order.customer.first_name,admin_customer_path(@order.customer) %></td>
					</tr>
					<tr>
						<td>配送先</td>
						<td>〒<%= @order.postal_code + @order.address + @order.name %></td>
					</tr>
					<tr>
						<td>支払方法</td>
						<td><%= @order.payment %></td>
					</tr>
					<tr>
						<td>注文ステータス</td>
						<td>
							<%= form_with model: @order , url: admin_order_path(@order) do |f| %>
							<%= f.select :status, [["入金待ち","入金待ち"],["入金確認","入金確認"],["製作中","製作中"],["発送準備中","発送準備中"],["発送済み","発送済み"]] %>
							<%= f.submit "更新",class: "btn btn-primary" %>
							<% end %>
						</td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>

	<div class="row">
		<div class="col-xs-9">
			<table class="table table-bordered">
				<thead>
					<tr>
						<th class="warning">商品名</th>
						<th class="warning">単価（税込）</th>
						<th class="warning">数量</th>
						<th class="warning">小計</th>
						<th class="warning">製作ステータス</th>
						<th class="warning"></th>
					</tr>
				</thead>
				<tbody>
					<% @order_product.each do |g| %>
					<tr class="active">
						<td><%= g.product.name %></td>
						<td align="center"><%= ((g.purchase_unit_price * 1.1).round).to_s(:delimited) %></td>
						<td align="center"><%= g.quantity %></td>
						<td align="center"><%= ((g.purchase_unit_price * g.quantity * 1.1).round).to_s(:delimited) %></td>
						<%= form_with model: g , url: admin_order_product_path(g) do |h| %>
						<td align="center">
							<%= h.select :status, [["着手不可","着手不可"],["製作待ち","製作待ち"],["製作中","製作中"],["製作完了","製作完了"]] %>
						</td>
						<td align="center"><%= h.submit "更新",class: "btn btn-primary" %></td>
						<% end %>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
		<div class="col-xs-3">
			<table class="table table-bordered">
				<thead>
					<tr></tr>
				</thead>
				<tbody>
					<tr>
						<td class="warning">商品合計</td>
						<td align="right" class="active"><%=@order.total_price.to_s(:delimited) %>円</td>
					</tr>
					<tr>
						<td class="warning">送料</td>
						<td align="right" class="active"><%=@order.postage.to_s(:delimited) %>円</td>
					</tr>
					<tr>
						<td class="warning">請求金額合計</td>
						<td align="right" class="active"><%= (@order.total_price + @order.postage).to_s(:delimited) %>円</td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
</div>
<div class="col-xs-1"></div>