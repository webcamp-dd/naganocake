	<thead>
		<tr></tr>
	</thead>
	<tbody>
		<tr>
			<td>購入者</td>
			<td><%= @order_customer.family_name %><%= @order_customer.first_name %></td>
		</tr>
		<tr>
			<td>配送先</td>
			<td></td>
