<div class="container">
	<div class="row">
		<div class="col-lg-1"></div>
		<div class="col-lg-10">
			<div class="title"><h3>会員一覧</h3></div>
			<br>

			<table class="table table-bordered">
				<thead>
					<tr>
						<th class="warning">会員ID</th>
						<th class="warning">氏名</th>
						<th class="warning">メールアドレス</th>
						<th class="warning">ステータス</th>
					</tr>
				</thead>
				<tbody>
					<% @customers.each do |customer| %>
					<tr class="active">
						<td><%= customer.id %></td>
						<td>
							<%= link_to admin_customer_path(customer) do %>
							<%= customer.family_name %><%= customer.first_name %>
							<% end %>
						</td>
						<td><%= customer.email %></td>
						<td><% if customer.deleted_at %>
							退会済み
							<% else %>
							有効
							<% end %>
						</td>
					</tr>
					<% end %>
					<%= paginate @customers %>
				</tbody>
			</table>
		</div>
		<div class="col-lg-1"></div>
	</div>
</div>