<div class="container">
	<div class="row">
		<div class="col-lg-1"></div>
		<div class="col-lg-10">
			<h1><%= @customer.family_name + @customer.first_name %>さんの会員情報編集</h1>

			<table class="table table-hover">
				<thead>
					<tr>
						<td></td>
						<td></td>
					</tr>
				</thead>
				<tbody>
					<tr>
						<td>顧客ID</td>
						<td><%= @customer.id %></td>
					</tr>
					<%= form_with model: @customer , url:admin_customer_path(@customer) do |f| %>
					<tr>
						<td>氏名</td>
						<td><%= f.text_field :family_name %></td>
						<td><%= f.text_field :first_name %></td>
					</tr>
					<tr>
						<td>フリガナ</td>
						<td><%= f.text_field :kana_family_name %></td>
						<td><%= f.text_field :kana_first_name %></td>
					</tr>
					<tr>
						<td>郵便番号</td>
						<td><%= f.text_field :postal_code %></td>
					</tr>
					<tr>
						<td>住所</td>
						<td><%= f.text_field :address %></td>
					</tr>
					<tr>
						<td>電話番号</td>
						<td><%= f.text_field :phone_number %></td>
					</tr>
					<tr>
						<td>メールアドレス</td>
						<td><%= f.text_field :email %></td>
					</tr>
					<tr>
						<td>会員ステータス</td>
						<td>
							<%= f.radio_button :is_active, 1 %>
							<%= f.label :is_active,"有効", {value: 1, style: "display: inline-block;"} %>
							<%= f.radio_button :is_active, 0 %>
							<%= f.label :is_active,"退会済み", {value: 0, style: "display: inline-block;"} %>
						</td>
					</tr>
					<tr>
						<td><%= f.submit  "変更を保存する",class: "btn btn-primary" %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
		<div class="col-lg-1"></div>
	</div>
</div>